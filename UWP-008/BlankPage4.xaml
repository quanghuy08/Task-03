        <Rectangle Fill="Green"
                   Height="100"
                   Width="100"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Rectangle Fill="Beige"
                   Height="100"
                   Width="100"
                   HorizontalAlignment="Right" Margin="0,448,210,92"/>

        <Rectangle Fill="Yellow"
                   Height="100"
                   Width="100"
                   HorizontalAlignment="Right" Margin="0,105,160,435"/>

